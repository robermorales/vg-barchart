
-if ( @data.size == 0 || @data[0].keys.size.to_f == 0)
        %text{ :x => '0', :y => '100%' }
                ="Empty data set"

-scale = 200.0
-rt    = 1.05
-s     = 1.0/(@data[0].keys.size.to_f-1.0)
-uni   = 6.28/@data.size.to_f
-cos   = Math.cos(uni)
-sin   = Math.sin(uni)

%rect{ :x => "0", :y => "0", :width=>"100%", :height=>"100%", :style=>"fill:#456"}
%g{:transform => "translate(250 250) scale(#{scale})" }
        - @data[0].keys.each_with_index do |k,ki|
                - @data.each_with_index do |d,i|
                        -angle        = -i.to_f*360.to_f/@data.size.to_f
                        -r            = ki.to_f*s - 0.5*s
                        -color        = 0
                        -begin
                                -color = d[k].hash.to_f % 180.0
                        -if ( ki > 0 )
                                %path{ :d=>"M#{r},0 A#{r},#{r} 0 0 0 #{r*cos},#{r*-sin}", :style=>"fill:none; stroke:hsl(#{color},100%,25%)", :transform=>"rotate(#{angle})", :'stroke-width' => "#{s/2.0}"}
                                        %set{ :attributeName => "stroke-width", :from => "#{s/2.0}", :to => "#{s}", :begin => "mouseover", :end => "mouseout" }
                        -else
                                -at = 180.0 + angle - 90.0*uni/3.14
                                -if ( -at > 90.0 && -at < 270.0 )
                                        -x  = -rt
                                        -an = "end"
                                -else
                                        -at = at - 180
                                        -x  = rt
                                        -an = "left"
                                %text{ :id=>"text#{i}", :x=>"#{x}",:y=>"0",:transform=>"rotate(#{at})",:style=>"font-family:Trebuchet MS;fill:white;font-size:0.1px;text-anchor:#{an};text-align:#{an};writing-mode:lr;alignment-baseline:central" }
                                        = "#{d[k]}"



